<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/contentWhite"
              android:orientation="vertical"
              tools:showIn="@layout/fragment_gym">

    <TextView
        style="@style/block_name"
        android:text="My Event"/>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:paddingLeft="20dp"
                 android:paddingRight="20dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/contentGray"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/event_summary"/>
    </FrameLayout>

</LinearLayout>

