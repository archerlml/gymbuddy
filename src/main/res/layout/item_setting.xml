<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/option_item_root"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_setting_bg"
                android:minHeight="50dp">

    <TextView
        android:id="@+id/name"
        style="@style/setting_item_name"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/value"
        style="@style/setting_item_value"
        android:layout_toLeftOf="@+id/more"
        android:text="@string/app_name"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        style="@style/avatar"
        android:layout_toLeftOf="@+id/value"
        android:src="@drawable/ic_account_circle_black_36dp"
        app:civ_border_color="#FFffffff"
        app:civ_border_width="2dp"/>

    <ImageView
        android:id="@+id/more"
        style="@style/setting_item_indicator"
        android:src="@drawable/ic_keyboard_arrow_right_white_48px"
        android:text=""/>

</RelativeLayout>