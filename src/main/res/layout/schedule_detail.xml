<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentGray"
    android:orientation="vertical"
    tools:showIn="@layout/activity_schedule">

    <com.github.chitoo.gymbuddy.views.WeekCalendarView
        android:id="@+id/week_calendar_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <View android:layout_width="match_parent"
          android:layout_height="10dp"/>

    <com.github.chitoo.gymbuddy.views.TimeSheetView
        android:id="@+id/time_sheet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
    />

</LinearLayout>